    <form action="/compose" method="post">
                    
        <div class="mb-3">
            <label class="fw-bold form-label" for="postTitle">Title</label>
            <input type="text" class="form-control" id="postTitle" name="postTitle">
        </div>

        <div class="mb-3">
            <label class="fw-bold form-label" for="post">Post</label>
